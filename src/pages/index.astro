---
import MainLayout from "../layouts/MainLayout.astro";
import Typewriter from "typewriter-effect/dist/core";
---

<MainLayout title="Home">
  <div class="flex md:flex-row flex-col">
    <div
      id="title"
      class="md:pt-16 pt-8 md:text-6xl text-4xl ml-0 md:ml-16 align-bottom flex flex-col"
    >
      <span class="pt-8 md:pt-0 md:text-6xl text-5xl"
        >Hey! I'm <span
          class="inline-block font-extrabold pl-1 pr-1 w-fit magic">Eric</span
        >
      </span>

      <span class="mt-8 md:pt-0 md:text-4xl text-2xl"
        >But you can call me <span
          class="inline-block font-extrabold pl-1 pr-1 w-fit magic">Lyenx</span
        >
      </span>

      <p class="text-3xl md:mt-24 mt-16">I'm a <span id="writer"></span></p>
    </div>
    <div
      id="test"
      class="outline outline-red-800 outline-2 h-[60vh] w-auto md:w-[528px] mt-28 md:ml-48"
    >
    </div>
  </div>
  <script>
    import Typewriter from "typewriter-effect/dist/core";
    document.addEventListener("DOMContentLoaded", () => {
      const typed = document.getElementById("writer");
      const tw = new Typewriter(typed, {
        loop: true,
        autoStart: true,
      });
      tw.typeString(
        "student - <span class='magic'><i class='fa fa-graduation-cap' /></span>"
      )
        .pauseFor("3000")
        .deleteChars("11")
        .pauseFor("200")
        .typeString(
          "developer - <span class='magic'><i class='fa fa-code' /></span>"
        )
        .pauseFor("3000")
        .deleteChars("13")
        .pauseFor("200")
        .typeString(
          "guitarist - <span class='magic'><i class='fa fa-guitar' /></span>"
        )
        .pauseFor("3000")
        .deleteChars("13")
        .pauseFor("200")
        .start();
    });
  </script>
</MainLayout>
